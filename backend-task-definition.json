{
  "family": "mindguard-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::610595224824:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::610595224824:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "mindguard-backend",
      "image": "610595224824.dkr.ecr.us-east-1.amazonaws.com/mindguard-backend:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        }
      ],
      "secrets": [
        {"name": "DB_HOST_NAME", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/db-host"},
        {"name": "DB_PORT", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/db-port"},
        {"name": "DB_NAME", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/db-name"},
        {"name": "DB_USER", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/db-user"},
        {"name": "DB_PASSWORD", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/db-password"},
        {"name": "JWT_SECRET_KEY", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/jwt-secret"},
        {"name": "JWT_ALGORITHM", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/jwt-algorithm"},
        {"name": "JWT_EXPIRY_MINUTES", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/jwt-expiry"},
        {"name": "AWS_ACCESS_KEY_MODEL", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/aws-access-key-model"},
        {"name": "AWS_SECRET_KEY_MODEL", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/aws-secret-key-model"},
        {"name": "AWS_ACCESS_KEY_ID", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/aws-access-key-id"},
        {"name": "AWS_SECRET_ACCESS_KEY", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/aws-secret-access-key"},
        {"name": "BEDROCK_MODEL_ID", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/bedrock-model-id"},
        {"name": "S3_BUCKET", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/s3-bucket"},
        {"name": "AT_USERNAME", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/at-username"},
        {"name": "AT_API_KEY", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/at-api-key"},
        {"name": "AT_SENDER_ID", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/at-sender-id"},
        {"name": "TWILIO_ACCOUNT_SID", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/twilio-account-sid"},
        {"name": "TWILIO_AUTH_TOKEN", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/twilio-auth-token"},
        {"name": "TWILIO_FROM", "valueFrom": "arn:aws:secretsmanager:us-east-1:610595224824:secret:mindguard/twilio-from"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mindguard-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
