{
  "family": "mindguard-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::610595224824:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::610595224824:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "mindguard-backend",
      "image": "610595224824.dkr.ecr.us-east-1.amazonaws.com/mindguard-backend:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "SECRET_NAME",
          "value": "backend-env"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mindguard-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
